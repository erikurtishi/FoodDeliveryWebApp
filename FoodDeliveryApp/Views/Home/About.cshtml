@{
    ViewData["Title"] = "About Us";
}

<div class="about-section">
    <!-- Hero Section -->
    <div class="hero-section text-center mb-5" data-aos="fade-up">
        <h1 class="display-4 mb-4">About <span class="highlight-text">FoodieHub</span></h1>
        <p class="lead mb-4">Connecting food lovers with their favorite local restaurants</p>
        <div class="brand-accent mx-auto"></div>
    </div>

    <!-- Our Story Section -->
    <div class="row g-4 mb-5">
        <div class="col-md-6" data-aos="fade-right">
            <div class="story-card glass-effect p-4">
                <h2 class="section-title mb-4">Our Story</h2>
                <p class="mb-4">FoodieHub started with a simple idea: making local food more accessible to everyone. What began as a small startup has grown into a thriving community of food lovers, restaurants, and delivery partners.</p>
                <div class="stats-container">
                    <div class="row g-3">
                        <div class="col-4">
                            <div class="stat-item text-center">
                                <h3 class="highlight-text">500+</h3>
                                <p>Restaurants</p>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-item text-center">
                                <h3 class="highlight-text">50K+</h3>
                                <p>Happy Customers</p>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-item text-center">
                                <h3 class="highlight-text">100+</h3>
                                <p>Cities</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6" data-aos="fade-left">
            <div class="image-card glass-effect p-4">
                <img src="~/images/about-hero.jpg" alt="FoodieHub Story" class="img-fluid rounded">
            </div>
        </div>
    </div>

    <!-- Mission & Values -->
    <div class="row g-4 mb-5">
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
            <div class="value-card glass-effect p-4 text-center">
                <div class="icon-wrapper mb-4">
                    <i class="fas fa-heart float"></i>
                </div>
                <h3 class="mb-3">Our Mission</h3>
                <p>To deliver happiness through exceptional food experiences and seamless delivery service.</p>
            </div>
        </div>
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
            <div class="value-card glass-effect p-4 text-center">
                <div class="icon-wrapper mb-4">
                    <i class="fas fa-star float"></i>
                </div>
                <h3 class="mb-3">Our Vision</h3>
                <p>To be the most loved food delivery platform connecting people with their favorite meals.</p>
            </div>
        </div>
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
            <div class="value-card glass-effect p-4 text-center">
                <div class="icon-wrapper mb-4">
                    <i class="fas fa-handshake float"></i>
                </div>
                <h3 class="mb-3">Our Values</h3>
                <p>Customer satisfaction, quality service, and community support drive everything we do.</p>
            </div>
        </div>
    </div>

    <!-- Team Section -->
    <div class="team-section mb-5" data-aos="fade-up">
        <h2 class="section-title text-center mb-5">Meet Our Team</h2>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
                <div class="team-card glass-effect p-4 text-center">
                    <div class="team-image mb-4">
                        <img src="~/images/team-1.jpg" alt="Team Member" class="rounded-circle">
                    </div>
                    <h4>John Doe</h4>
                    <p class="text-muted">CEO & Founder</p>
                    <div class="social-links-modern justify-content-center">
                        <a href="#" class="social-icon-modern" title="LinkedIn">
                            <i class="fa-brands fa-linkedin-in"></i>
                        </a>
                        <a href="#" class="social-icon-modern" title="Twitter">
                            <i class="fa-brands fa-twitter"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="200">
                <div class="team-card glass-effect p-4 text-center">
                    <div class="team-image mb-4">
                        <img src="~/images/team-2.jpg" alt="Team Member" class="rounded-circle">
                    </div>
                    <h4>Jane Smith</h4>
                    <p class="text-muted">Operations Director</p>
                    <div class="social-links-modern justify-content-center">
                        <a href="#" class="social-icon-modern" title="LinkedIn">
                            <i class="fa-brands fa-linkedin-in"></i>
                        </a>
                        <a href="#" class="social-icon-modern" title="Twitter">
                            <i class="fa-brands fa-twitter"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="300">
                <div class="team-card glass-effect p-4 text-center">
                    <div class="team-image mb-4">
                        <img src="~/images/team-3.jpg" alt="Team Member" class="rounded-circle">
                    </div>
                    <h4>Mike Johnson</h4>
                    <p class="text-muted">Tech Lead</p>
                    <div class="social-links-modern justify-content-center">
                        <a href="#" class="social-icon-modern" title="LinkedIn">
                            <i class="fa-brands fa-linkedin-in"></i>
                        </a>
                        <a href="#" class="social-icon-modern" title="Twitter">
                            <i class="fa-brands fa-twitter"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="400">
                <div class="team-card glass-effect p-4 text-center">
                    <div class="team-image mb-4">
                        <img src="~/images/team-4.jpg" alt="Team Member" class="rounded-circle">
                    </div>
                    <h4>Sarah Wilson</h4>
                    <p class="text-muted">Marketing Head</p>
                    <div class="social-links-modern justify-content-center">
                        <a href="#" class="social-icon-modern" title="LinkedIn">
                            <i class="fa-brands fa-linkedin-in"></i>
                        </a>
                        <a href="#" class="social-icon-modern" title="Twitter">
                            <i class="fa-brands fa-twitter"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="cta-section text-center" data-aos="fade-up">
        <div class="glass-effect p-5">
            <h2 class="mb-4">Join Our Journey</h2>
            <p class="lead mb-4">Be part of our growing food delivery community</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="#" class="btn btn-primary btn-lg">Partner with Us</a>
                <a href="#" class="btn btn-outline-primary btn-lg">Join as Driver</a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .about-section {
            padding: 2rem 0;
        }

        .hero-section {
            padding: 3rem 0;
        }

        .brand-accent {
            height: 3px;
            width: 100px;
            background: linear-gradient(45deg, #ff6b6b, #ff8e53);
        }

        .icon-wrapper {
            width: 60px;
            height: 60px;
            background: linear-gradient(45deg, #ff6b6b, #ff8e53);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            color: white;
            font-size: 1.5rem;
        }

        .team-image img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border: 3px solid white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .stat-item h3 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .value-card {
            height: 100%;
            transition: transform 0.3s ease;
        }

        .value-card:hover {
            transform: translateY(-5px);
        }

        .team-card {
            height: 100%;
            transition: transform 0.3s ease;
        }

        .team-card:hover {
            transform: translateY(-5px);
        }

        .highlight-text {
            background: linear-gradient(45deg, #ff6b6b, #ff8e53);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 700;
        }
    </style>
} 