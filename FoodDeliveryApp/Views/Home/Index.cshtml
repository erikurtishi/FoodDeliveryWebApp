@model IEnumerable<FoodDeliveryApp.Models.Restaurant>

@{
ViewData["Title"] = "Restaurants";
}

<h2>Restaurants</h2>

<div class="row">
    @foreach (var restaurant in Model)
    {
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <img src="@restaurant.PhotoUrl" class="card-img-top" alt="@restaurant.Name" style="height: 200px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title">@restaurant.Name</h5>
                <p class="card-text text-muted">@restaurant.Description</p>
                <a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="Details" asp-route-id="@restaurant.RestaurantID">View Menu</a>
            </div>
        </div>
    </div>
    }
</div>