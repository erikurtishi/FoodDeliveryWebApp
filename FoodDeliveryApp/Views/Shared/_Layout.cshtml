@using Microsoft.AspNetCore.Identity
@inject UserManager<FoodDeliveryApp.Models.AppUser> UserManager
@inject SignInManager<FoodDeliveryApp.Models.AppUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodieHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body class="app-background">
    <!-- Loading Screen -->
    <div class="loading">
        <div class="loading-content">
            <div class="loading-spinner glow"></div>
            <h3 class="mt-4 animate__animated animate__fadeIn">Loading Deliciousness...</h3>
        </div>
    </div>

    <div class="content-wrapper">
        <header>
            <nav class="navbar navbar-expand-lg fixed-top">
                <div class="container">
                    <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index" data-aos="fade-right">
                        <div class="brand-icon float">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <span class="brand-text glow">FoodieHub</span>
                    </a>
                    
                    <button class="navbar-toggler glow" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav mx-auto">
                            @if (User.IsInRole("Restaurant"))
                            {
                                <li class="nav-item" data-aos="fade-down" data-aos-delay="100">
                                    <a class="nav-link" asp-controller="Restaurant" asp-action="Index">
                                        <i class="fas fa-chart-line me-2"></i>Dashboard
                                        <span class="nav-indicator"></span>
                                    </a>
                                </li>
                                <li class="nav-item" data-aos="fade-down" data-aos-delay="200">
                                    <a class="nav-link" asp-controller="Restaurant" asp-action="Dashboard">
                                        <i class="fas fa-clipboard-list me-2"></i>Orders
                                        <span class="nav-indicator"></span>
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Driver"))
                            {
                                <li class="nav-item" data-aos="fade-down" data-aos-delay="100">
                                    <a class="nav-link" asp-controller="Driver" asp-action="Index">
                                        <i class="fas fa-motorcycle me-2"></i>Dashboard
                                        <span class="nav-indicator"></span>
                                    </a>
                                </li>
                            }
                        </ul>

                        <div class="nav-right" data-aos="fade-left">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <div class="user-profile dropdown">
                                    <button class="btn dropdown-toggle user-button glow" data-bs-toggle="dropdown">
                                        <div class="avatar">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <span>@{
                                            var currentUser = await UserManager.GetUserAsync(User);
                                            if (currentUser != null)
                                            {
                                                @currentUser.FullName
                                            }
                                        }</span>
                                    </button>
                                    <ul class="dropdown-menu glass-effect animate__animated animate__fadeIn">
                                        <li><a class="dropdown-item" href="#"><i class="fas fa-user-circle me-2"></i>Profile</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Account" asp-action="Logout" method="post">
                                                <button type="submit" class="dropdown-item">
                                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <div class="auth-buttons">
                                    <a class="btn btn-outline-primary me-2 glow" asp-action="Login" asp-controller="Account">
                                        <i class="fas fa-sign-in-alt me-2"></i>Login
                                    </a>
                                    <a class="btn btn-primary glow" asp-action="Register" asp-controller="Account">
                                        <i class="fas fa-user-plus me-2"></i>Register
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="container mt-5 pt-4">
            <div class="content-container glass-effect animate__animated animate__fadeIn" data-aos="fade-up">
                @RenderBody()
            </div>
        </main>

        <footer class="glass-effect mt-5 footer-modern">
            <div class="container py-5">
                <div class="row g-4">
                    <div class="col-lg-4 col-md-6" data-aos="fade-right" data-aos-duration="1000">
                        <div class="footer-brand mb-4 animate__animated animate__fadeIn">
                            <div class="brand-wrapper">
                                <i class="fas fa-utensils float glow"></i>
                                <h3 class="glow brand-text">FoodieHub</h3>
                            </div>
                            <div class="brand-accent"></div>
                        </div>
                        <p class="footer-tagline mb-4 animate__animated animate__fadeIn animate__delay-1s">
                            <span class="highlight-text">Delivering happiness</span> to your doorstep, one meal at a time. 
                            Experience the best local restaurants with just a few clicks.
                        </p>
                        <div class="newsletter-form animate__animated animate__fadeInUp animate__delay-2s">
                            <h5 class="mb-3 section-title">Stay Updated</h5>
                            <div class="input-group newsletter-input-group">
                                <input type="email" class="form-control modern-input" placeholder="Enter your email">
                                <button class="btn btn-primary glow pulse-button" type="button">
                                    <i class="fas fa-paper-plane"></i>
                                    <span>Subscribe</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-6" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
                        <h5 class="mb-4 section-title">Quick Links</h5>
                        <ul class="footer-links modern-links">
                            <li class="animate__animated animate__fadeInRight animate__delay-1s">
                                <a href="#" class="glow link-item">
                                    <i class="fas fa-angle-right"></i>
                                    <span>About Us</span>
                                </a>
                            </li>
                            <li class="animate__animated animate__fadeInRight animate__delay-2s">
                                <a href="#" class="glow link-item">
                                    <i class="fas fa-angle-right"></i>
                                    <span>Our Services</span>
                                </a>
                            </li>
                            <li class="animate__animated animate__fadeInRight animate__delay-3s">
                                <a href="#" class="glow link-item">
                                    <i class="fas fa-angle-right"></i>
                                    <span>Contact</span>
                                </a>
                            </li>
                            <li class="animate__animated animate__fadeInRight animate__delay-4s">
                                <a asp-controller="Home" asp-action="Privacy" class="glow link-item">
                                    <i class="fas fa-angle-right"></i>
                                    <span>Privacy Policy</span>
                                </a>
                            </li>
                            <li class="animate__animated animate__fadeInRight animate__delay-5s">
                                <a href="#" class="glow link-item">
                                    <i class="fas fa-angle-right"></i>
                                    <span>Terms of Service</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="400">
                        <h5 class="mb-4 section-title">Our Services</h5>
                        <ul class="footer-links modern-links">
                            <li class="animate__animated animate__fadeInUp animate__delay-1s">
                                <a href="#" class="glow link-item">
                                    <i class="fas fa-utensils service-icon"></i>
                                    <span>Restaurant Partners</span>
                                </a>
                            </li>
                            <li class="animate__animated animate__fadeInUp animate__delay-2s">
                                <a href="#" class="glow link-item">
                                    <i class="fas fa-motorcycle service-icon"></i>
                                    <span>Become a Driver</span>
                                </a>
                            </li>
                            <li class="animate__animated animate__fadeInUp animate__delay-3s">
                                <a href="#" class="glow link-item">
                                    <i class="fas fa-gift service-icon"></i>
                                    <span>Gift Cards</span>
                                </a>
                            </li>
                            <li class="animate__animated animate__fadeInUp animate__delay-4s">
                                <a href="#" class="glow link-item">
                                    <i class="fas fa-headset service-icon"></i>
                                    <span>24/7 Support</span>
                                </a>
                            </li>
                            <li class="animate__animated animate__fadeInUp animate__delay-5s">
                                <a href="#" class="glow link-item">
                                    <i class="fas fa-mobile-alt service-icon"></i>
                                    <span>Mobile App</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-6" data-aos="fade-left" data-aos-duration="1000" data-aos-delay="600">
                        <h5 class="mb-4 section-title">Connect With Us</h5>
                        <div class="social-links-modern">
                            <a href="#" class="social-icon-modern" title="Facebook">
                                <i class="fa-brands fa-facebook"></i>
                            </a>
                            <a href="#" class="social-icon-modern" title="Twitter">
                                <i class="fa-brands fa-twitter"></i>
                            </a>
                            <a href="#" class="social-icon-modern" title="Instagram">
                                <i class="fa-brands fa-instagram"></i>
                            </a>
                            <a href="#" class="social-icon-modern" title="LinkedIn">
                                <i class="fa-brands fa-linkedin-in"></i>
                            </a>
                        </div>
                        <div class="contact-info-modern animate__animated animate__fadeIn animate__delay-5s">
                            <h5 class="mb-3 section-title">Contact Info</h5>
                            <div class="contact-item">
                                <i class="fas fa-phone-alt contact-icon glow"></i>
                                <p class="mb-2">+1 (555) 123-4567</p>
                            </div>
                            <div class="contact-item">
                                <i class="fas fa-envelope contact-icon glow"></i>
                                <p class="mb-2">support@foodiehub.com</p>
                            </div>
                            <div class="contact-item">
                                <i class="fas fa-map-marker-alt contact-icon glow"></i>
                                <p class="mb-0">123 Foodie Street, Cuisine City</p>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="footer-divider my-4">
                <div class="footer-bottom text-center animate__animated animate__fadeIn">
                    <p class="mb-0 copyright-text">&copy; @DateTime.Now.Year <span class="highlight-text">FoodieHub</span>. All rights reserved.</p>
                </div>
            </div>
        </footer>

        <!-- Floating Action Button -->
        <button class="fab glow" id="scrollToTop">
            <i class="fas fa-arrow-up"></i>
        </button>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        // Initialize AOS
        AOS.init({
            duration: 800,
            once: true,
            offset: 100
        });

        // Loading Screen
        window.addEventListener('load', function() {
            document.querySelector('.loading').style.display = 'none';
        });

        // Scroll to Top
        document.getElementById('scrollToTop').addEventListener('click', function() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // Show/Hide Scroll to Top button
        window.addEventListener('scroll', function() {
            const fab = document.getElementById('scrollToTop');
            if (window.scrollY > 300) {
                fab.style.display = 'flex';
            } else {
                fab.style.display = 'none';
            }
        });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
