@{
    ViewData["Title"] = "Partner with Us";
}

<div class="partner-section">
    <!-- Hero Section -->
    <div class="hero-section text-center mb-5" data-aos="fade-up">
        <h1 class="display-4 mb-4">Partner with <span class="highlight-text">FoodieHub</span></h1>
        <p class="lead mb-4">Grow your business with the leading food delivery platform</p>
        <div class="brand-accent mx-auto"></div>
    </div>

    <!-- Benefits Section -->
    <div class="benefits-section mb-5">
        <div class="row g-4">
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="100">
                <div class="benefit-card glass-effect p-4 text-center">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h4>Increase Revenue</h4>
                    <p>Reach more customers and boost your sales</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="200">
                <div class="benefit-card glass-effect p-4 text-center">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h4>Easy Management</h4>
                    <p>Manage orders with our user-friendly dashboard</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="300">
                <div class="benefit-card glass-effect p-4 text-center">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-truck"></i>
                    </div>
                    <h4>Delivery Network</h4>
                    <p>Access our reliable delivery fleet</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="400">
                <div class="benefit-card glass-effect p-4 text-center">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-bullhorn"></i>
                    </div>
                    <h4>Marketing Support</h4>
                    <p>Get featured in our promotions</p>
                </div>
            </div>
        </div>
    </div>

    <!-- How It Works -->
    <div class="how-it-works mb-5" data-aos="fade-up">
        <h2 class="section-title text-center mb-5">How It Works</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="step-card glass-effect p-4">
                    <div class="step-number">1</div>
                    <h4>Sign Up</h4>
                    <p>Complete our simple registration process and provide your restaurant details</p>
                    <ul class="step-list">
                        <li>Basic information</li>
                        <li>Menu details</li>
                        <li>Operating hours</li>
                        <li>Delivery area</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="step-card glass-effect p-4">
                    <div class="step-number">2</div>
                    <h4>Get Set Up</h4>
                    <p>We'll help you get started with our platform</p>
                    <ul class="step-list">
                        <li>Dashboard training</li>
                        <li>Menu optimization</li>
                        <li>Delivery settings</li>
                        <li>Payment setup</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="step-card glass-effect p-4">
                    <div class="step-number">3</div>
                    <h4>Start Selling</h4>
                    <p>Begin receiving orders and growing your business</p>
                    <ul class="step-list">
                        <li>Accept orders</li>
                        <li>Manage deliveries</li>
                        <li>Track earnings</li>
                        <li>Get support</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Partner Form -->
    <div class="partner-form-section mb-5" data-aos="fade-up">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-content glass-effect p-4">
                    <h2 class="section-title mb-4">Join Our Network</h2>
                    <form class="partner-form">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control modern-input" id="restaurantName" placeholder="Restaurant Name">
                                    <label for="restaurantName">Restaurant Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control modern-input" id="ownerName" placeholder="Owner Name">
                                    <label for="ownerName">Owner Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control modern-input" id="email" placeholder="Email">
                                    <label for="email">Email</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="tel" class="form-control modern-input" id="phone" placeholder="Phone">
                                    <label for="phone">Phone</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control modern-input" id="address" placeholder="Restaurant Address">
                                    <label for="address">Restaurant Address</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control modern-input" id="description" style="height: 100px" placeholder="Tell us about your restaurant"></textarea>
                                    <label for="description">Restaurant Description</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-paper-plane me-2"></i>Submit Application
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="stats-content glass-effect p-4">
                    <h2 class="section-title mb-4">Why Partner With Us?</h2>
                    <div class="stats-grid">
                        <div class="stat-item text-center">
                            <h3 class="highlight-text">500K+</h3>
                            <p>Active Users</p>
                        </div>
                        <div class="stat-item text-center">
                            <h3 class="highlight-text">100+</h3>
                            <p>Cities</p>
                        </div>
                        <div class="stat-item text-center">
                            <h3 class="highlight-text">30%</h3>
                            <p>Average Revenue Increase</p>
                        </div>
                        <div class="stat-item text-center">
                            <h3 class="highlight-text">24/7</h3>
                            <p>Support</p>
                        </div>
                    </div>
                    <div class="testimonial mt-4">
                        <div class="testimonial-content glass-effect p-4">
                            <i class="fas fa-quote-left fa-2x mb-3 highlight-text"></i>
                            <p class="mb-3">"Partnering with FoodieHub has transformed our business. Our delivery orders have increased significantly, and the platform is incredibly easy to use."</p>
                            <div class="testimonial-author">
                                <img src="~/images/restaurant-owner.jpg" alt="Restaurant Owner" class="rounded-circle me-2">
                                <div>
                                    <h5 class="mb-0">John Smith</h5>
                                    <small>Owner, The Tasty Corner</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FAQ Section -->
    <div class="faq-section" data-aos="fade-up">
        <h2 class="section-title text-center mb-5">Frequently Asked Questions</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="faq-card glass-effect p-4">
                    <h4><i class="fas fa-question-circle me-2 highlight-text"></i>How much does it cost?</h4>
                    <p>We charge a small commission per order. Contact us for detailed pricing information.</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="faq-card glass-effect p-4">
                    <h4><i class="fas fa-question-circle me-2 highlight-text"></i>How long does setup take?</h4>
                    <p>Most restaurants are up and running within 48 hours after approval.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .partner-section {
            padding: 2rem 0;
        }

        .hero-section {
            padding: 3rem 0;
        }

        .brand-accent {
            height: 3px;
            width: 100px;
            background: linear-gradient(45deg, #ff6b6b, #ff8e53);
            margin: 0 auto;
        }

        .icon-wrapper {
            width: 60px;
            height: 60px;
            background: linear-gradient(45deg, #ff6b6b, #ff8e53);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            margin: 0 auto;
        }

        .benefit-card, .step-card {
            height: 100%;
            transition: transform 0.3s ease;
        }

        .benefit-card:hover, .step-card:hover {
            transform: translateY(-5px);
        }

        .step-number {
            width: 40px;
            height: 40px;
            background: linear-gradient(45deg, #ff6b6b, #ff8e53);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .step-list {
            list-style: none;
            padding-left: 0;
            margin-top: 1rem;
        }

        .step-list li {
            padding: 0.5rem 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            position: relative;
            padding-left: 1.5rem;
        }

        .step-list li:before {
            content: 'âœ“';
            color: #ff8e53;
            position: absolute;
            left: 0;
        }

        .modern-input {
            border: 1px solid rgba(0, 0, 0, 0.1);
            background: rgba(255, 255, 255, 0.9);
        }

        .modern-input:focus {
            box-shadow: 0 0 0 0.25rem rgba(255, 142, 83, 0.25);
            border-color: #ff8e53;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .stat-item h3 {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .testimonial-author {
            display: flex;
            align-items: center;
        }

        .testimonial-author img {
            width: 50px;
            height: 50px;
            object-fit: cover;
        }

        .highlight-text {
            background: linear-gradient(45deg, #ff6b6b, #ff8e53);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 700;
        }

        .section-title {
            position: relative;
            padding-bottom: 1rem;
        }

        .section-title::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            height: 2px;
            width: 50px;
            background: linear-gradient(45deg, #ff6b6b, #ff8e53);
        }

        .text-center .section-title::after {
            left: 50%;
            transform: translateX(-50%);
        }
    </style>
} 