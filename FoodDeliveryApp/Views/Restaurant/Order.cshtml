@model FoodDeliveryApp.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

<div>
    <p><strong>Order ID:</strong> @Model.OrderID</p>
    <p><strong>Placed By:</strong> @Model.User?.Email</p>
    <p><strong>Restaurant:</strong> @Model.Restaurant?.Name</p>
    <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Created At:</strong> @Model.CreatedAt.ToString("f")</p>
</div>

<h3>Order Items</h3>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Menu Item</th>
        <th>Quantity</th>
        <th>Total Price</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.OrderItems)
    {
        <tr>
            <td>@item.MenuItem.Name</td>
            <td>@item.Quantity</td>
            <td>@item.TotalPrice.ToString("C")</td>
        </tr>
    }
    </tbody>
</table>