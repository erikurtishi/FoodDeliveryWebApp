@model FoodDeliveryApp.Models.MenuItem

@{
    ViewData["Title"] = "Edit Menu Item";
}

<h1>Edit Menu Item</h1>

<form asp-action="EditMenuItem" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="MenuItemID" />

    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CategoryID">Category</label>
        <select asp-for="CategoryID" class="form-control" asp-items="@(new SelectList(ViewData["Categories"] as List<Category>, "CategoryID", "Name"))">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PhotoUrl">Photo URL</label>
        <input asp-for="PhotoUrl" class="form-control" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="IsAvailable">Is Available</label>
        <input asp-for="IsAvailable" type="checkbox" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>